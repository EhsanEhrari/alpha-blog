<h1>Lists of All Articles</h1>
<h3><%= link_to 'Create New Article', new_article_path %></h3>

<table border="2">

 
  <tr>
	<th>ID</th>
	<th>Title</th>
	<th>Descreption</th>
	<th>Show</th>
	<th>Edit</th>
	<th>Delete</th>
  </tr>
<% @articles.each do |article| %>
  <tr>
	<td><%= article.id %></td>
	<td><%= article.title %></td>
	<td><%= article.descreption %></td>
	<td><%= link_to 'Show' , article_path(article) %></td>
	<td><%= link_to 'Edit' , edit_article_path(article) %></td>
	<td><%= link_to 'Delete' , edit_article_path(article) %></td>
  </tr>
<% end %>
</table>
